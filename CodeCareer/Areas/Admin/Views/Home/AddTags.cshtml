@model TagModel

<h2>Добавление тегов</h2>
<form asp-area="Admin" asp-controller="Home" asp-action="AddTags" method="post">
	<h3>Название тега:</h3>
	<input asp-for="Name"/>
	<span asp-validation-for="Name"></span>

	<button type="submit">Добавить</button>
</form>
<a asp-area="Admin" asp-controller="Home" asp-action="Index">Перестать добавлять теги</a>