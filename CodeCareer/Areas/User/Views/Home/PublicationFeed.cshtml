@using CodeCareer.Areas.User.Services.Interfaces
@using CodeCareer.Areas.User.Services.Implementations.JsonServices

@inject IPublicationService PublicationService

@{
	var publications = PublicationService.GetPublicationModels();
	publications.Reverse();
}

<div>
	<h2>Лента публикаций</h2>

	@foreach (var publication in publications)
	{
		<div>
			<h4><a asp-area="User" asp-controller="Home" asp-action="AlienProfile" asp-route-userEmail="@publication.User.Email">@publication.User.FullName</a> - @publication.CreatedDate.Date.ToString("dd.MM.yyyy")</h4>
			<p>@publication.Content</p>
		</div>
	}
</div>