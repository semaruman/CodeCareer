@inject ITagService TagService

@{
	var tags = TagService.GetTagModels();
}

<form asp-area="User" asp-controller="Home" asp-action="AddSkillTags" method="post">
	<h1>Выберите теги</h1>
	@foreach (var tag in tags)
	{
		if (HomeController.currentUser.SkillTags.Contains(tag))
		{
			<div>
				<input type="checkbox"
					   name="skillTagNames"
					   value="@tag.Name"
					   checked />
				<label>@tag.Name</label>
			</div>
		}
		else
		{
			<div>
				<input type="checkbox"
					   name="skillTagNames"
					   value="@tag.Name" />
				<label>@tag.Name</label>
			</div>
		}
	}
	<button type="submit">Добавить</button>
</form>